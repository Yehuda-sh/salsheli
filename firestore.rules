// ğŸ”’ MemoZap Firestore Security Rules
// 
// âœ… ×¢×•×“×›×Ÿ: 02/11/2025 - ×ª×™×§×•×Ÿ ×©×™×ª×•×£ ××©×ª××©×™×
// 
// ğŸ“„ ××¢×¨×›×ª ×”×¨×©××•×ª ×œ×¨×©×™××•×ª ××©×•×ª×¤×•×ª (4 ×¨××•×ª):
//    - Owner:  ×‘×¢×œ×™× (×›×œ ×”×”×¨×©××•×ª ×›×•×œ×œ ××—×™×§×”) - ×©×“×” created_by
//    - Admin:  ×× ×”×œ (×›××¢×˜ ×›×œ ×”×”×¨×©××•×ª, ××™×©×•×¨ ×‘×§×©×•×ª)
//    - Editor: ×¢×•×¨×š (×©×œ×™×—×ª ×‘×§×©×•×ª ×‘×œ×‘×“ ×“×¨×š pending_requests)
//    - Viewer: ×¦×•×¤×” (×¨×§ ×§×¨×™××”)
//
// ğŸ“Œ ×©×“×•×ª ×—×“×©×™× ×‘×¨×©×™××”:
//    - created_by: ××–×”×” ×”×‘×¢×œ×™× (×‘××§×•× user_id)
//    - shared_users: ×¨×©×™××ª ××©×ª××©×™× ×¢× ×ª×¤×§×™×“×™×
//    - pending_requests: ×‘×§×©×•×ª ×××ª×™× ×•×ª ×-Editors
//    - active_shoppers: ×§×•× ×™× ×¤×¢×™×œ×™× (×§× ×™×™×” ××©×•×ª×¤×ª)

service cloud.firestore {
  match /databases/{database}/documents {
    
    // === Helper Functions ===
    
    // ×‘×“×™×§×” ×× ×”××©×ª××© ××—×•×‘×¨
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ×‘×“×™×§×” ×× ×”××©×ª××© ×”×•× ×”×‘×¢×œ×™× ×©×œ ×”× ×ª×•× ×™×
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ×§×‘×œ×ª household_id ×©×œ ×”××©×ª××© ×”× ×•×›×—×™
    // âœ… ××ª×•×§×Ÿ: ×‘×“×™×§×ª exists() ×œ×¤× ×™ get()
    function getUserHouseholdId() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid))
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.household_id
        : null;
    }
    
    // ×‘×“×™×§×” ×× ×”××©×ª××© ×©×™×™×š ×œ-household
    // âœ… ××ª×•×§×Ÿ: ×‘×“×™×§×ª exists() + null check
    function isHouseholdMember(householdId) {
      let userHouseholdId = getUserHouseholdId();
      return isAuthenticated() && 
             userHouseholdId != null &&
             userHouseholdId == householdId;
    }
    
    // ×‘×“×™×§×” ×× ×©× ×™ ××©×ª××©×™× ×‘××•×ª×• household
    function sameHousehold(otherUserId) {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             exists(/databases/$(database)/documents/users/$(otherUserId)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.household_id ==
             get(/databases/$(database)/documents/users/$(otherUserId)).data.household_id;
    }
    
    // ×‘×“×™×§×” ×©×”××¡××š ×”×—×“×© ××›×™×œ household_id ×ª×§×™×Ÿ
    function hasValidHouseholdId() {
      return request.resource.data.keys().hasAll(['household_id']) &&
             request.resource.data.household_id == getUserHouseholdId();
    }
    
    // === Sharing System Functions ===
    
    // ×§×‘×œ×ª ×ª×¤×§×™×“ ×”××©×ª××© ×‘×¨×©×™××”
    // âœ… ××ª×•×§×Ÿ: ×©×™××•×© ×‘-created_by ×‘××§×•× user_id + ×‘×“×™×§×•×ª null
    function getUserRole(listId) {
      let list = get(/databases/$(database)/documents/shopping_lists/$(listId));
      
      // ×‘×“×™×§×” ×× ×”××©×ª××© ×”×•× ×”×‘×¢×œ×™× (created_by)
      if (list.data.created_by == request.auth.uid) {
        return 'owner';
      }
      
      // ×—×™×¤×•×© ×‘×¨×©×™××ª sharedUsers
      // Firestore rules ×œ× ×ª×•××š ×‘-filter(), × ×‘×“×•×§ ×‘×“×¨×š ××—×¨×ª
      let sharedUsers = list.data.sharedUsers;
      
      // × ×¢×‘×•×¨ ×¢×œ ×”××¢×¨×š ×•× ×—×¤×© ××ª ×”××©×ª××©
      // ××›×™×•×•×Ÿ ×©-Firestore rules ××•×’×‘×œ, × ×©×ª××© ×‘×’×™×©×” ×¤×©×•×˜×” ×™×•×ª×¨
      // × × ×™×— ×©×”××¢×¨×š ×§×˜×Ÿ (×¢×“ 10 ××©×ª××©×™× ××©×•×ª×¤×™×)
      return sharedUsers != null && sharedUsers.size() > 0 ? 
             checkUserInSharedList(sharedUsers, request.auth.uid) : 
             null;
    }
    
    // ×¤×•× ×§×¦×™×” ×¢×–×¨ ×œ×—×™×¤×•×© ××©×ª××© ×‘×¨×©×™××ª sharedUsers
    function checkUserInSharedList(sharedUsers, userId) {
      // × ×‘×“×•×§ ×¢×“ 10 ××©×ª××©×™× (××’×‘×œ×” ×¡×‘×™×¨×”)
      return sharedUsers.size() > 0 && sharedUsers[0].userId == userId ? sharedUsers[0].role :
             sharedUsers.size() > 1 && sharedUsers[1].userId == userId ? sharedUsers[1].role :
             sharedUsers.size() > 2 && sharedUsers[2].userId == userId ? sharedUsers[2].role :
             sharedUsers.size() > 3 && sharedUsers[3].userId == userId ? sharedUsers[3].role :
             sharedUsers.size() > 4 && sharedUsers[4].userId == userId ? sharedUsers[4].role :
             sharedUsers.size() > 5 && sharedUsers[5].userId == userId ? sharedUsers[5].role :
             sharedUsers.size() > 6 && sharedUsers[6].userId == userId ? sharedUsers[6].role :
             sharedUsers.size() > 7 && sharedUsers[7].userId == userId ? sharedUsers[7].role :
             sharedUsers.size() > 8 && sharedUsers[8].userId == userId ? sharedUsers[8].role :
             sharedUsers.size() > 9 && sharedUsers[9].userId == userId ? sharedUsers[9].role :
             null;
    }
    
    // ×‘×“×™×§×” ×× ×”××©×ª××© ×”×•× Owner ×©×œ ×”×¨×©×™××”
    // âœ… ××ª×•×§×Ÿ: ×©×™××•×© ×‘-created_by ×‘××§×•× user_id
    function isListOwner(listId) {
      let list = get(/databases/$(database)/documents/shopping_lists/$(listId));
      return isAuthenticated() && list.data.created_by == request.auth.uid;
    }
    
    // ×‘×“×™×§×” ×× ×”××©×ª××© ×”×•× Admin ××• Owner
    // âœ… ××ª×•×§×Ÿ: ×‘×“×™×§×ª null ×¢×œ role
    function isListAdmin(listId) {
      let role = getUserRole(listId);
      return isAuthenticated() && role != null && (role == 'owner' || role == 'admin');
    }
    
    // ×‘×“×™×§×” ×× ×”××©×ª××© ×—×‘×¨ ×‘×¨×©×™××” (×›×•×œ×œ Viewer)
    // âœ… ××ª×•×§×Ÿ: ×©×™××•×© ×‘-created_by + ×‘×“×™×§×” ×œ×œ× filter()
    function isListMember(listId) {
      let list = get(/databases/$(database)/documents/shopping_lists/$(listId));
      
      // ×‘×¢×œ×™× = ×ª××™×“ ×—×‘×¨
      if (list.data.created_by == request.auth.uid) {
        return true;
      }
      
      // ×‘×“×™×§×” ×× ×§×™×™× ×‘-sharedUsers
      let sharedUsers = list.data.sharedUsers;
      return sharedUsers != null && sharedUsers.size() > 0 && 
             checkUserInSharedList(sharedUsers, request.auth.uid) != null;
    }
    
    // ×‘×“×™×§×” ×× ×™×›×•×œ ×œ××©×¨ ×‘×§×©×•×ª (Owner ××• Admin)
    function canApproveRequests(listId) {
      return isListAdmin(listId);
    }
    
    // === Users Collection ===
    match /users/{userId} {
      // âœ… ××ª×•×§×Ÿ: ××©×ª××© ×™×›×•×œ ×œ×§×¨×•× ××ª ×¢×¦××• + ××©×ª××©×™× ×××•×ª×• household
      allow read: if isOwner(userId) || 
                     (isAuthenticated() && sameHousehold(userId));
      
      // ×›×ª×™×‘×”: ×¨×§ ×¢×¦××™
      allow write: if isOwner(userId);
    }
    
    // === Receipts Collection ===
    match /receipts/{receiptId} {
      // ×§×¨×™××”: ×¨×§ ××©×ª××©×™× ×××•×ª×• household
      allow read: if isAuthenticated() && 
                     isHouseholdMember(resource.data.household_id);
      
      // âœ… ××ª×•×§×Ÿ: ×™×¦×™×¨×” - ×—×•×‘×” ×©×”××¡××š ×™×›×œ×•×œ household_id ×ª×§×™×Ÿ
      allow create: if isAuthenticated() && hasValidHouseholdId();
      
      allow update: if isAuthenticated() && 
                       isHouseholdMember(resource.data.household_id) &&
                       request.resource.data.household_id == resource.data.household_id; // ×× ×¢ ×©×™× ×•×™ household_id
      
      allow delete: if isAuthenticated() && 
                       isHouseholdMember(resource.data.household_id);
    }
    
    // === Inventory Collection ===
    match /inventory/{itemId} {
      allow read: if isAuthenticated() && 
                     isHouseholdMember(resource.data.household_id);
      
      // âœ… ××ª×•×§×Ÿ: ×™×¦×™×¨×”
      allow create: if isAuthenticated() && hasValidHouseholdId();
      
      allow update: if isAuthenticated() && 
                       isHouseholdMember(resource.data.household_id) &&
                       request.resource.data.household_id == resource.data.household_id;
      
      allow delete: if isAuthenticated() && 
                       isHouseholdMember(resource.data.household_id);
    }
    
    // === Products Collection ===
    match /products/{productId} {
      // âœ… ××ª×•×§×Ÿ: ××•×¦×¨×™× ×¤×•××‘×™×™× - ×›×•×œ× ×™×›×•×œ×™× ×œ×§×¨×•×
      allow read: if true;
      
      // âœ… ××ª×•×§×Ÿ: ×¨×§ admin via Firebase Functions
      allow write: if false;
    }
    
    // === Shopping Lists Collection ===
    match /shopping_lists/{listId} {
      // ×§×¨×™××”: household member ××• shared user
      allow read: if isAuthenticated() && (
                       isHouseholdMember(resource.data.household_id) ||
                       isListMember(listId)
                     );
      
      // ×™×¦×™×¨×”: ×¨×§ household member
      allow create: if isAuthenticated() && hasValidHouseholdId();
      
      // ×¢×“×›×•×Ÿ: ×œ×¤×™ ×”×¨×©××•×ª
      // Owner/Admin: ×›×œ ×¢×“×›×•×Ÿ
      // Editor: ×¨×§ pending_requests
      // Viewer: ×œ× ×™×›×•×œ ×œ×¢×“×›×Ÿ
      allow update: if isAuthenticated() && (
                       // Owner/Admin - ×›×œ ×¢×“×›×•×Ÿ
                       isListAdmin(listId) ||
                       // Editor - ×¨×§ ×”×•×¡×¤×ª ×‘×§×©×•×ª ×œ-pendingRequests
                       (getUserRole(listId) == 'editor' && 
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['pending_requests']))
                     ) &&
                     // ×× ×¢ ×©×™× ×•×™ household_id
                     request.resource.data.household_id == resource.data.household_id &&
                     // ×× ×¢ ×©×™× ×•×™ created_by
                     request.resource.data.created_by == resource.data.created_by;
      
      // ××—×™×§×”: ×¨×§ Owner
      allow delete: if isAuthenticated() && isListOwner(listId);
    }
    
    // === Templates Collection ===
    match /templates/{templateId} {
      // ×§×¨×™××”: 
      // 1. ×ª×‘× ×™×•×ª ××¢×¨×›×ª (is_system=true)
      // 2. ×ª×‘× ×™×•×ª ×©×× ×™ ×™×¦×¨×ª×™
      // 3. ×ª×‘× ×™×•×ª shared ×©×œ ×—×‘×¨×™ household
      allow read: if isAuthenticated() && (
        resource.data.is_system == true ||
        resource.data.user_id == request.auth.uid ||
        (resource.data.default_format == 'shared' && resource.data.household_id == getUserHouseholdId())
      );
      
      // âœ… ××ª×•×§×Ÿ: ×™×¦×™×¨×” - ×¨×§ ×ª×‘× ×™×•×ª ××©×ª××© ×¢× household_id ×ª×§×™×Ÿ
      allow create: if isAuthenticated() && 
                       request.resource.data.is_system == false &&
                       request.resource.data.user_id == request.auth.uid &&
                       hasValidHouseholdId();
      
      // ×¢×“×›×•×Ÿ: ×¨×§ ×ª×‘× ×™×•×ª ×©×× ×™ ×™×¦×¨×ª×™ + ××•×ª×• household
      allow update: if isAuthenticated() && 
                       resource.data.is_system == false &&
                       resource.data.user_id == request.auth.uid &&
                       request.resource.data.household_id == resource.data.household_id;
      
      // ××—×™×§×”: ×¨×§ ×ª×‘× ×™×•×ª ×©×× ×™ ×™×¦×¨×ª×™
      allow delete: if isAuthenticated() && 
                       resource.data.is_system == false &&
                       resource.data.user_id == request.auth.uid;
    }
    
    // === Custom Locations Collection ===
    match /custom_locations/{locationId} {
      allow read: if isAuthenticated() && 
                     isHouseholdMember(resource.data.household_id);
      
      // âœ… ×›×‘×¨ ×˜×•×‘! ××©×ª××© ×‘-getUserHouseholdId() ×™×©×™×¨×•×ª
      allow create: if isAuthenticated() && 
                       request.resource.data.keys().hasAll(['household_id']) &&
                       request.resource.data.household_id == getUserHouseholdId();
      
      allow update: if isAuthenticated() && 
                       isHouseholdMember(resource.data.household_id) &&
                       request.resource.data.household_id == resource.data.household_id;
      
      allow delete: if isAuthenticated() && 
                       isHouseholdMember(resource.data.household_id);
    }
    
    // === Habits Collection ===
    match /habits/{habitId} {
      allow read: if isAuthenticated() && 
                     isHouseholdMember(resource.data.household_id);
      
      // âœ… ××ª×•×§×Ÿ: ×™×¦×™×¨×”
      allow create: if isAuthenticated() && hasValidHouseholdId();
      
      allow update: if isAuthenticated() && 
                       isHouseholdMember(resource.data.household_id) &&
                       request.resource.data.household_id == resource.data.household_id;
      
      allow delete: if isAuthenticated() && 
                       isHouseholdMember(resource.data.household_id);
    }
    
    // === Deny All Other Collections ===
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
